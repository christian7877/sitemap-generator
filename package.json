{
  "name": "sitemap-generator",
  "version": "0.1.7",
  "license": "MIT",
  "author": "Professor Chaos",
  "description": "Use chrome browser to generate sitemaps for your websites. This extension crawls website like a real user.",
  "homepage": "https://github.com/pikkumyy/sitemap-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/pikkumyy/sitemap-generator.git"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "start": "xt-build -c .build.json -e dev",
    "build": "xt-build -c .build.json -e prod -r",
    "docs": "xt-docs -c .docs.json",
    "test": "nyc mocha ./test/*.spec.js --require babel-core/register",
    "test:coveralls": "npm run test && nyc report --reporter=text-lcov | coveralls",
    "release": "git add -A && git commit -m \"release\" && standard-version"
  },
  "devDependencies": {
    "cws-publish": "^1.0.8",
    "pm-components": "^0.0.1",
    "pm-extension-cli": "^0.3.0",
    "standard-version": "^4.3.0",
    "babel-preset-env": "^1.7.0",
    "babel-core": "^6.26.3",
    "coveralls": "^3.0.1",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "chai": "^4.1.2",
    "jsdom": "11.10.0",
    "jsdom-global": "3.0.2",
    "sinon-chrome": "^2.3.2"
  }
}
